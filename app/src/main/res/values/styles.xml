<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Styles for MainActivity -->
    <style name="Asteroid_Title" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/asteroid_title</item>
    </style>

    <style name="Asteroid_Rotation">
        <item name="android:layout_width">@dimen/asteroid_rotation_dimen</item>
        <item name="android:layout_height">@dimen/asteroid_rotation_dimen</item>
        <item name="android:src">@drawable/asteroide2</item>
        <item name="android:layout_gravity">right</item>
    </style>


    <style name="Button_Main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
